{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Jekyll Dev",
      "type": "shell",
      "command": "export ASDF_DATA_DIR=\"${HOME}/.asdf\" && export PATH=\"${ASDF_DATA_DIR}/shims:$PATH\" && JEKYLL_ENV=development bundle exec jekyll serve --livereload --drafts --trace",
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        // This dummy pattern meets VS Code's requirement for both file & message
        "pattern": [
          {
            "regexp": "^(.*?):(.*)$",
            "kind": "file",
            "file": 1,
            "message": 2
          }
        ],
        "background": {
          "activeOnStart": true,
          // Start watching from first line
          "beginsPattern": "^",
          // Stop when Jekyll prints "Server running..." 
          "endsPattern": "Server running..."
        }
      }
    },
    {
      "label": "Jekyll Prod",
      "type": "shell",
      "command": "export ASDF_DATA_DIR=\"${HOME}/.asdf\" && export PATH=\"${ASDF_DATA_DIR}/shims:$PATH\" && JEKYLL_ENV=production bundle exec jekyll serve --trace",
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "pattern": [
          {
            "regexp": "^(.*?):(.*)$",
            "kind": "file",
            "file": 1,
            "message": 2
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^",
          "endsPattern": "Server running..."
        }
      }
    }
  ]
}
